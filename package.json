{
  "name": "toolkit",
  "version": "0.0.0-development",
  "private": true,
  "workspaces": [
    "apps/*",
    "config/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=[HEAD^1]",
    "build:all": "turbo run build",
    "changeset": "changeset",
    "ci:prerelease": "pnpm install && pnpm build",
    "ci:release": "pnpm run ci:prerelease && changeset publish -r",
    "ci:version": "changeset version && pnpm install --frozen-lockfile false",
    "clean": "turbo run clean --filter=[HEAD^1]",
    "clean:all": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "dependencies": {
    "@thedaviddias/tsconfig": "workspace:*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/is-ci": "^3.0.0",
    "dotenv": "^16.0.3",
    "eslint-config-custom": "workspace:*",
    "is-ci": "^3.0.1",
    "prettier": "^2.8.3",
    "tsup": "^6.5.0",
    "turbo": "^1.7.0"
  },
  "packageManager": "pnpm@7.5.2",
  "engines": {
    "node": ">=16.0.0"
  }
}
