{
  "name": "@thedaviddias/tsconfig",
  "version": "1.0.4",
  "type": "module",
  "description": "TypeScript Configuration for David Dias projects",
  "repository": "thedaviddias/toolkit.git",
  "sideEffects": false,
  "private": false,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "pnpm run clean",
    "clean": "rm -rf .turbo",
    "clean:install": "pnpm run clean && rm -rf node_modules",
    "dev": "echo '#tsup-node  --watch'",
    "format:lint": "pnpm run lint:eslint --fix && pnpm run format:prettier --write",
    "format:prettier": "prettier \"./src/**/*.{cjs,js,jsx,mjs,ts,tsx,json,md,mdx,css,html,yml,yaml,scss}\" --ignore-unknown --loglevel warn",
    "lint": "pnpm run format:prettier --check"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
